        <section data-category-number="<%= question.category_number %>" data-question-number="<%= question.question_number %>">
            <%_ if (question.title) { -%>
                <h2><%= question.title %></h2>
            <%_ } -%>
                <img class="r-stretch" data-src="<%- question.image %>">
            <%_ if (question.caption) { -%>
                <p class="caption"><%= question.caption %></p>
            <%_ } -%>
            <%_ if (isAnswer && !question.hide_answer) { -%>
                <p class="fragment answer"><%= question.answer %></p>
            <%_ } else if (isAnswer && question.immediatly_show_answer) { -%>
                <p class="answer"><%= question.answer %></p>
            <%_ } -%>
            <%_ if (question.source) { -%>
                <p class="source"><%= question.source %></p>
            <%_ } -%>
        </section>
