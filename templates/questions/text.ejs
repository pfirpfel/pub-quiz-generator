<section>
    <% if (question.title) { %>
        <h2><%= question.title %></h2>
    <% } %>
    <p><%= question.question %></p>
    <% if (isAnswer) { %>
        <p class="answer"><%= question.answer %></p>
    <% } %>
    <% if (question.source) { %>
        <p class="source"><%= question.source %></p>
    <% } %>
</section>
